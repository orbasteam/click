<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </div>
<% end %>

<h1>Channels <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, new_channel_path, class: 'btn btn-primary' %></h1>
<table class="table table-striped">
	<tobdy>
		<tr>
			<th>Name</th>
			<th>Created at</th>
			<th>Updated at</th>
			<th>Actions</th>
		</tr>
		<% @channels.each do |channel| %>
		<tr>
			<td><%= channel.name %></td>
			<td><%= channel.created_at %></td>
			<td><%= channel.updated_at %></td>
			<td>
				<%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_channel_path(channel), class: 'btn btn-success', title: 'Edit', data: { toggle: 'tooltip' } %>
				<%= link_to '<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'.html_safe, channel, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure ?'} %>
			</td>
		</tr>
		<% end %>
	</tobdy>
</table>